<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrdersActivity">

    <TextView
            android:text="@string/Tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="38dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/yourOrderListView"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="69dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView7" app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" android:layout_marginEnd="19dp"/>
    <TextView
            android:text="@string/Your_Order"
            android:layout_width="174dp"
            android:layout_height="49dp" android:id="@+id/textView3"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/Place_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/placeOrderButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/SubTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="64dp" android:layout_marginBottom="284dp"/>
    <TextView
            android:text="@string/Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="57dp" android:layout_marginStart="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="@string/Zero_Ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subTotalTextViewPriceArea"
            android:layout_marginTop="69dp"
            app:layout_constraintTop_toBottomOf="@+id/yourOrderListView" android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="@+id/yourOrderListView"/>
    <TextView
            android:text="@string/Zero_Ammount"
            android:layout_width="35dp"
            android:layout_height="14dp" android:id="@+id/taxTextViewPriceArea"
            app:layout_constraintStart_toStartOf="@+id/subTotalTextViewPriceArea" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/subTotalTextViewPriceArea"/>
    <TextView
            android:text="@string/Zero_Ammount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/totalTextViewPriceArea"
            app:layout_constraintStart_toStartOf="@+id/taxTextViewPriceArea" android:layout_marginTop="57dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@+id/taxTextViewPriceArea"/>
</androidx.constraintlayout.widget.ConstraintLayout>